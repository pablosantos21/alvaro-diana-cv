---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import logo1 from "../assets/lrn.png";
import logo2 from "../assets/pantarei.png";
import logoBlack from "../assets/logo_black.png";

---

<Layout title="Contacto">
  <!-- Hero -->
  <div
    class="min-h-[100dvh] bg-[url('../assets/biografia.jpeg')] bg-black/50 bg-blend-overlay bg-cover bg-right flex flex-col justify-end"
  >
    <h2 class="text-5xl text-white pl-20 font-semibold mb-10">Contacto</h2>
  </div>

  <!-- Contact Information -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-30">
    <h2 class="text-3xl font-bold mb-6 text-center">Información de Contacto</h2>

    <div class="flex flex-wrap gap-6 justify-center text-center">
      <div class="flex-1 min-w-[250px]">
         <Image
          src={logoBlack}
          alt="Álvaro Diana"
          class="w-16 h-auto mx-auto mb-4"
          id="logo-black"
        />

        <h3 class="text-xl font-semibold">Álvaro Diana</h3>
        <p class="text-gray-700">
          Teléfono: <a href="tel:+34679319714">+34 679 319 714</a>
        </p>
        <p class="text-gray-700">
          Correo: <a href="mailto:alvarodiana1@gmail.com"
            >alvarodiana1@gmail.com</a
          >
        </p>
      </div>

      <div class="flex-1 min-w-[250px]">
        <Image src={logo1} alt={``} class="w-16 h-auto mx-auto mb-4" />
        <h3 class="text-xl font-semibold">General Management</h3>
        <p class="text-gray-700">Xavi Aragonés - Lerín Management</p>
        <p class="text-gray-700">
          Correo: <a href="mailto:xavi@lerinartists.com"
            >xavi@lerinartists.com</a
          >
        </p>
      </div>

      <div class="flex-1 min-w-[250px]">
        <Image src={logo2} alt={``} class="w-16 h-auto mx-auto mb-4" />

        <h3 class="text-xl font-semibold">France & Italy Management</h3>
        <p class="text-gray-700">Maria Rosa Vigoroux - Panta Rei Music</p>
        <p class="text-gray-700">
          Correo: <a href="mailto:direction@pantareimusic.com"
            >direction@pantareimusic.com</a
          >
        </p>
      </div>
    </div>
  </section>
</Layout>
