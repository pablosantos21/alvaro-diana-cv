      <!-- Navigation Buttons -->
      <button
        id="prev-btn"
        class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white rounded-full p-3 shadow-lg hover:shadow-xl transition-shadow duration-200 z-10 hidden sm:block"
      >
        <svg
          class="w-5 h-5 text-gray-600"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      <button
        id="next-btn"
        class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white rounded-full p-3 shadow-lg hover:shadow-xl transition-shadow duration-200 z-10 hidden sm:block"
      >
        <svg
          class="w-5 h-5 text-gray-600"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <!-- Dots Indicator -->
    <div class="flex justify-center mt-8 space-x-2">
      <button
        class="dot w-3 h-3 bg-gray-900 rounded-full transition-colors duration-200"
        data-slide="0"></button>
      <button
        class="dot w-3 h-3 bg-gray-300 rounded-full transition-colors duration-200"
        data-slide="1"></button>
      <button
        class="dot w-3 h-3 bg-gray-300 rounded-full transition-colors duration-200"
        data-slide="2"></button>
      <button
        class="dot w-3 h-3 bg-gray-300 rounded-full transition-colors duration-200"
        data-slide="3"></button>
      <button
        class="dot w-3 h-3 bg-gray-300 rounded-full transition-colors duration-200"
        data-slide="4"></button>
      <button
        class="dot w-3 h-3 bg-gray-300 rounded-full transition-colors duration-200"
        data-slide="5"></button>
      <button
        class="dot w-3 h-3 bg-gray-300 rounded-full transition-colors duration-200"
        data-slide="6"></button>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const carousel = document.getElementById("testimonials-carousel");
    const prevBtn = document.getElementById("prev-btn");
    const nextBtn = document.getElementById("next-btn");
    const dots = document.querySelectorAll(".dot");
    let currentSlide = 0;
    const totalSlides = 7;

    if (!carousel || !prevBtn || !nextBtn) return;

    function updateCarousel() {
      if (!carousel) return;
      const translateX = -currentSlide * 100;
      carousel.style.transform = `translateX(${translateX}%)`;

      // Update dots
      dots.forEach((dot, index) => {
        if (index === currentSlide) {
          dot.classList.remove("bg-gray-300");
          dot.classList.add("bg-gray-900");
        } else {
          dot.classList.remove("bg-gray-900");
          dot.classList.add("bg-gray-300");
        }
      });
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      updateCarousel();
    }

    function prevSlide() {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      updateCarousel();
    }

    // Timer control so interactions reset autoplay
    let intervalId = null;
    const AUTOPLAY_DELAY = 5000;
    function startTimer() {
      clearTimer();
      intervalId = setInterval(nextSlide, AUTOPLAY_DELAY);
    }
    function clearTimer() {
      if (intervalId !== null) {
        clearInterval(intervalId);
        intervalId = null;
      }
    }
    function resetTimer() {
      startTimer();
    }

    // Event listeners — restart timer when user interacts
    nextBtn.addEventListener("click", () => {
      nextSlide();
      resetTimer();
    });
    prevBtn.addEventListener("click", () => {
      prevSlide();
      resetTimer();
    });

    // Dot navigation
    dots.forEach((dot, index) => {
      dot.addEventListener("click", () => {
        currentSlide = index;
        updateCarousel();
        resetTimer();
      });
    });

    // Start autoplay
    startTimer();
  });
</script>
