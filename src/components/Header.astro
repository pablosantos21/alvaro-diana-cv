<header
  id="site-header"
  class="fixed top-0 left-0 w-full z-50 transition-colors duration-300 bg-transparent"
>
  <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
    <h1
      id="site-title"
      class="text-xl font-bold text-white transition-colors duration-300"
    >
      <a href="/" class="hover:opacity-80 transition-opacity duration-300"
        >Álvaro Diana</a
      >
    </h1>

    <!-- Hamburger button for mobile -->
    <button
      id="menu-toggle"
      class="md:hidden text-white focus:outline-none ml-auto md:ml-0 order-3 md:order-2"
      aria-label="Abrir menú"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <nav>
      <ul
        id="menu"
        class="hidden flex-col md:flex md:flex-row md:gap-6 absolute md:static top-full left-0 w-full md:w-auto bg-black md:bg-transparent"
      >
        <li>
          <a href="biografia" class="block px-4 py-2 text-white hover:underline"
            >Biografía</a
          >
        </li>
        <li>
          <a href="eventos" class="block px-4 py-2 text-white hover:underline"
            >Eventos</a
          >
        </li>
        <li>
          <a
            href="repertorio"
            class="block px-4 py-2 text-white hover:underline">Repertorio</a
          >
        </li>
        <li>
          <a href="fotos" class="block px-4 py-2 text-white hover:underline"
            >Fotos</a
          >
        </li>
        <li>
          <a href="videos" class="block px-4 py-2 text-white hover:underline"
            >Videos</a
          >
        </li>

        <li>
          <a href="contacto" class="block px-4 py-2 text-white hover:underline"
            >Contacto</a
          >
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  const header = document.getElementById("site-header");
  const title = document.getElementById("site-title");
  const menuToggle = document.getElementById("menu-toggle");
  const menu = document.getElementById("menu");
  const links = menu.querySelectorAll("a");

  // Scroll: change background and text color
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      header.classList.add("bg-white", "shadow-md");
      header.classList.remove("bg-transparent");
      title.classList.remove("text-white");
      title.classList.add("text-black");
      links.forEach((a) => {
        a.classList.remove("text-white");
        a.classList.add("text-black");
      });
      // make hamburger black on scroll (mobile)
      if (menuToggle) {
        menuToggle.classList.remove("text-white");
        menuToggle.classList.add("text-black");
      }
    } else {
      header.classList.remove("bg-white", "shadow-md");
      header.classList.add("bg-transparent");
      title.classList.remove("text-black");
      title.classList.add("text-white");
      links.forEach((a) => {
        a.classList.remove("text-black");
        a.classList.add("text-white");
      });
      // revert hamburger color
      if (menuToggle) {
        menuToggle.classList.remove("text-black");
        menuToggle.classList.add("text-white");
      }
    }
  });

  // Mobile menu toggle
  menuToggle.addEventListener("click", () => {
    menu.classList.toggle("hidden");
  });
</script>
