---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource-variable/montserrat";

export interface Props {
  title?: string;
}

const { title = "Álvaro Diana" } = Astro.props;
const pageTitle = title === "Álvaro Diana" ? title : `${title} - Álvaro Diana`;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo_white.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  /* Load local WoodfordBournePRO fonts from /public/fonts and map weights/styles */
  @font-face {
    font-family: "Woodford Bourne Pro";
    src: url("/fonts/WoodfordBournePRO-Regular.otf") format("opentype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Woodford Bourne Pro";
    src: url("/fonts/WoodfordBournePRO-Bold.otf") format("opentype");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Woodford Bourne Pro";
    src: url("/fonts/WoodfordBournePRO-Italic.otf") format("opentype");
    font-weight: 400;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: "Woodford Bourne Pro";
    src: url("/fonts/WoodfordBournePRO-BoldItalic.otf") format("opentype");
    font-weight: 700;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: "Woodford Bourne Pro";
    src: url("/fonts/WoodfordBournePRO-Thin.otf") format("opentype");
    font-weight: 200;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Woodford Bourne Pro";
    src: url("/fonts/WoodfordBournePRO-ThinItalic.otf") format("opentype");
    font-weight: 200;
    font-style: italic;
    font-display: swap;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    /* Use local Woodford Bourne Pro as primary, fall back to Montserrat variable then generic sans */
    font-family: "Woodford Bourne Pro", "Montserrat Variable", sans-serif;
  }
</style>
